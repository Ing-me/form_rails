<% if false %>
    <%= form_tag("/users", method: "post") do %>
    <%= label_tag(:username, "Username:") %>
    <%= text_field_tag(:username) %>
    <%= label_tag(:email, "Email:") %>
    <%= text_field_tag(:email) %>
    <%= label_tag(:password, "Password:") %>
    <%= password_field_tag(:password) %>
    <%= submit_tag("Submit") %>
<% end %>
<% end %>

<%= form_with model: User.new do |form| %>
    <%= form.text_field :username, placeholder: "Add your username" %>
    <% @user.errors.full_messages_for(:username).each do |message| %>
        <div><%= message %></div>
      <% end %>
    <%= form.email_field :email, placeholder: "example@example.com" %>
    <% @user.errors.full_messages_for(:email).each do |message| %>
        <div><%= message %></div>
      <% end %>
    <%= form.password_field :password, placeholder: "Add your password" %>
    <% @user.errors.full_messages_for(:password).each do |message| %>
        <div><%= message %></div>
      <% end %>
    <%= form.submit %>
<% end %>